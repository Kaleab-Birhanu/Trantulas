/* program to input eight integer numbers into an array named temp. As each number is input, add
the number into a total.*/
#include <iostream>
using namespace std;
int main(){ 
    int temp[8];
    int total=0;
    double average;
    for(int i=0;i<8;++i){
            cout<<"enter the "<<i+1<<" number: ";
            cin>>temp[i];
        total+=temp[i];
        cout<<endl;
        }
    cout<<"the numbers are: ";
      for(int j=0;j<8;++j){
        cout<<temp[j]<<"\t";
        
      } 
      cout<<"\n";
      average= double(total)/8;
      cout<<"their average is: "<<average;

return 0;
}
